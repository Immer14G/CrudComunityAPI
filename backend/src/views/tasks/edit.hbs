<div class="row">
    <div class="col-md-4 offset-md-4">
        <div class="card">
            <form action="/tasks/edit/{{task._id}}" method="POST">
                <div class="form-group">
                    <input type="text" name="title" value="{{task.title}}" placeholder="write your title"
                    class="form-control" autofocus> 
                </div>
                <div class="form-group">
                    <input type="text" name="description" value="{{task.description}}" placeholder="write a description"
                    class="form-control"> 
                </div>
                <button type="submit" class="btn btn-success btn-block">save</button>
            </form>
        </div>
    </div>
</div>

